{{!--
This pagination template is used to navigate through newer and older articles.
--}}

<div class="l-wrapper">
  <nav class="m-pagination" aria-label="{{block "Pagination"}}">
    {{#if prev}}
      <a href="{{page_url prev}}" class="m-icon-button filled in-pagination-left" aria-label="{{block "Newer posts"}}">
        <span class="icon-arrow-left"></span>
      </a>
    {{/if}}
    <span class="m-pagination__text">{{block "Page"}} {{page}} {{block "of"}} {{pages}}</span>
    {{#if next}}
      <a href="{{page_url next}}" class="m-icon-button filled in-pagination-right" aria-label="{{block "Older posts"}}">
        <span class="icon-arrow-right"></span>
      </a>
    {{/if}}
  </nav>
</div>
